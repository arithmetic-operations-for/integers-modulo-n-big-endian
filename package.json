{
  "name": "@aureooms/js-modular-arithmetic-big-endian",
  "description": "Modular arithmetic for JavaScript",
  "version": "1.0.0",
  "author": "Aur√©lien Ooms <aurelien.ooms@gmail.com>",
  "ava": {
    "files": [
      "test/src/**/*"
    ],
    "require": [
      "@babel/register"
    ],
    "timeout": "5m",
    "concurrency": 4
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "env": {
      "test": {
        "presets": [
          "babel-preset-power-assert"
        ],
        "plugins": [
          [
            "transform-remove-console",
            {
              "exclude": [
                "log",
                "error",
                "warn"
              ]
            }
          ]
        ],
        "sourceMaps": "inline"
      },
      "development": {
        "presets": [
          "babel-preset-power-assert"
        ],
        "plugins": [
          [
            "transform-remove-console",
            {
              "exclude": [
                "log",
                "error",
                "warn"
              ]
            }
          ]
        ],
        "sourceMaps": "inline"
      },
      "production": {
        "plugins": [
          "babel-plugin-unassert",
          [
            "transform-remove-console",
            {
              "exclude": [
                "log",
                "error",
                "warn"
              ]
            }
          ]
        ],
        "sourceMaps": "inline"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/aureooms/js-modular-arithmetic-big-endian/issues"
  },
  "dependencies": {
    "@aureooms/js-integer-big-endian": "^10.1.0"
  },
  "devDependencies": {
    "@babel/cli": "7.10.5",
    "@babel/core": "7.11.4",
    "@babel/preset-env": "7.11.0",
    "@babel/register": "7.10.5",
    "ava": "3.11.1",
    "babel-plugin-transform-remove-console": "6.9.4",
    "babel-plugin-unassert": "3.0.1",
    "babel-preset-power-assert": "3.0.0",
    "coveralls": "3.1.0",
    "esdoc": "1.1.0",
    "esdoc-ecmascript-proposal-plugin": "1.0.0",
    "esdoc-inject-script-plugin": "1.0.0",
    "esdoc-inject-style-plugin": "1.0.0",
    "esdoc-standard-plugin": "1.0.0",
    "np": "6.4.0",
    "nyc": "15.1.0",
    "power-assert": "1.6.1",
    "tap-dot": "2.0.0",
    "xo": "0.33.0"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://aureooms.github.io/js-modular-arithmetic-big-endian",
  "keywords": [
    "arithmetic",
    "modular"
  ],
  "license": "AGPL-3.0",
  "main": "lib/index.js",
  "prettier": {
    "trailingComma": "all"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aureooms/js-modular-arithmetic-big-endian"
  },
  "scripts": {
    "build": "babel --delete-dir-on-start --env-name production src -d lib",
    "cover": "nyc --reporter=lcov npm test -- --tap | tap-dot",
    "esdoc": "esdoc",
    "prepare": "npm run build",
    "release": "np",
    "test": "xo && ava"
  },
  "xo": {
    "prettier": true,
    "ignore": [
      "lib",
      "doc",
      "test/src/generated"
    ],
    "plugins": [
      "unicorn"
    ],
    "rules": {
      "camelcase": "off",
      "unicorn/filename-case": "off"
    }
  }
}
